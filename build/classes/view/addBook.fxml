<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" style="-fx-background-color: #E8E8E8;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.addBookController">
   <children>
      <VBox alignment="CENTER" spacing="10.0">
          <padding>
              <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
          </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="416.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0" />
               </children>
            </HBox>
            <Label text="Registro de libro" textFill="#08678c">
               <font>
                  <Font name="Georgia Bold" size="19.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="112.0" prefWidth="420.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="300.0" spacing="20.0">
                     <children>
                        <Label text="Información de libro" textFill="#2aa4bf">
                           <font>
                              <Font name="Georgia Bold" size="13.0" />
                           </font></Label>
                        <TextField fx:id="tf_bookTitle" promptText="Titulo del libro">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font></TextField>
                        <TextField fx:id="tf_idBook" promptText="ID Libro">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font></TextField>
                        <TextField fx:id="tf_genreBook" promptText="Género">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="tf_categorieBook" promptText="Categoria" >
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="tf_publisherBook" promptText="Editorial">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onRegistrar" prefHeight="35.0" prefWidth="130.0" styleClass="btn" stylesheets="@css/administrador.css" text="Registrar">
                     <font>
                        <Font name="Georgia Bold" size="15.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
