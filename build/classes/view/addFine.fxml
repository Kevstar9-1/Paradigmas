<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" style="-fx-background-color: #E8E8E8;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.addFineController">
   <children>
      <VBox alignment="CENTER" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="416.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0" />
               </children>
            </HBox>
            <Label text="Crear multa" textFill="#08678c">
               <font>
                  <Font name="Georgia Bold" size="19.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="112.0" prefWidth="420.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="300.0" spacing="20.0">
                     <children>
                        <Label text="Información de la multa" textFill="#2aa4bf">
                           <font>
                              <Font name="Georgia Bold" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="name" promptText="Nombre">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="amountFine" layoutX="10.0" layoutY="45.0" promptText="Monto">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="fineDate" promptText="Fecha de la multa dd/mm/aaaa">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="paymentDate" promptText="Fecha de pago dd/mm/aaaa">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="dueDate" promptText="Fecha de vencimiento dd/mm/aaaa">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="descriptionFine" promptText="Descripción">
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnAddFine" mnemonicParsing="false" onAction="#onAddFine" prefHeight="35.0" prefWidth="130.0" styleClass="btn_access" stylesheets="@../css/login.css" text="Aceptar">
                     <font>
                        <Font name="Georgia Bold" size="15.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRegresar" prefHeight="35.0" prefWidth="130.0" styleClass="btn_access" stylesheets="@../css/login.css" text="Regresar">
                     <font>
                        <Font name="Georgia Bold" size="15.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
